<!--Configuration will have appenders that describes where the logs will be placed-->
<!--appenders will contain encoders that describes the pattern of the log -->

<configuration>

    <appender name = "myConsoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <appender name = "myFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>
            StockWatchList.log
        </file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>StockWatchList-%d{yy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>10</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>
                %d{yy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
            </pattern>

        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="myConsoleAppender" />
    </root>

    <logger name="org.stockManagement" level="DEBUG" additivity="false">
        <appender-ref ref="myFileAppender" />
    </logger>

</configuration>